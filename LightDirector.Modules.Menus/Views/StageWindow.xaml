<Window x:Class="LightDirector.StageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightDirector"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="StageWindow" Height="1000" Width="1000" prism:ViewModelLocator.AutoWireViewModel="True">
   <Canvas x:Name="StageCanvas" Width="1000" Height="1000" MouseMove="Canvas_MouseMove" Background="Transparent">
      <Border BorderThickness="1" BorderBrush="Black" Canvas.Left="350" Canvas.Top="100" Width="300" Height="500" />
      <Ellipse Width="7" Height="7" x:Name="PositionMarker" Fill="Green"/>
   </Canvas>
</Window>
