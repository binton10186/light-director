<Window x:Class="LightDirector.Views.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightDirector.Views"
        mc:Ignorable="d"
        Title="New Project Properties" Height="300" Width="600" ResizeMode="NoResize">
    <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*"/>
         <RowDefinition Height="30"/>
      </Grid.RowDefinitions>
      <Grid Grid.Row="0">
         <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
         </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
         </Grid.ColumnDefinitions>
         <Label Grid.Row="0" Grid.Column="0">Project Name</Label>
         <TextBox Grid.Row="0" Grid.Column="1"></TextBox>
      </Grid>
      <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
         <Button Padding="10,0,10,0" Margin="5,0,5,0">OK</Button>
         <Button Padding="10,0,10,0" Margin="5,0,5,0">Cancel</Button>
      </StackPanel>
    </Grid>
</Window>
